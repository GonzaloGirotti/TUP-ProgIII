    footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        text-align: center;
        padding: 10px;
        background-color: rgb(255, 233, 233);
    }
    footer p {
        margin: 0;
        color:rgb(80, 88, 89);
    }