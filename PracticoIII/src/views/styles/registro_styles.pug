style.
    .formContainer, .pacientes-container, .medicos-container {
        background-color: rgb(255, 233, 233);
        border: 1px solid rgb(0, 0, 0);
        border-radius: 10px;
        padding: 20px;
        margin: 10px;
        width: 80%;
        text-align: center;
        align-items: center;
    }
    .paciente-card, .medico-card{
        background-color: rgb(255, 255, 255);
        border: 1px solid rgb(0, 0, 0);
        border-radius: 5px;
        margin: 10px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
    }
    p{
        margin: 10px;
        font-size: 16px;
    }
    .formulario{
        display: flex;
        flex-direction: column;
        text-align: center;
        align-items: center;
    }
    input{
        margin: 10px 0;
        padding: 10px;
        width: 80%;
        border: 1px solid rgb(0, 0, 0);
        border-radius: 5px;
    }
    .registroButton, .volverButton {
        margin-top: 10px;
        padding: 10px 20px;
        background-color:rgb(255, 255, 255);
        color: black;
        border: 1px solid rgb(0, 0, 0);
        border-radius: 5px;
    }